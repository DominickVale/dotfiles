#!/bin/zsh

# profile file. Runs on login. Environmental variables are set here.

export PATH="${PATH}:/home/dominick/.local/bin"
export PATH="${PATH}:/home/dominick/.scripts"
# Android studio
export ANDROID_HOME=$HOME/Android/Sdk
export ANDROID_NDK_HOME=$ANDROID_HOME/ndk/21.1.6352462
export PATH=$PATH:$ANDROID_HOME/emulator
export PATH=$PATH:$ANDROID_HOME/tools
export PATH=$PATH:$ANDROID_HOME/tools/bin
export PATH=$PATH:$ANDROID_HOME/platform-tools
export PATH=$PATH:$ANDROID_HOME/cmdline-tools/latest/bin

# General:
export LC_TIME=en_US.utf8
# export GDK_SCALE=1.5
# export GDK_DPI_SCALE=1.1
# export ELM_SCALE=1.5
# export QT_AUTO_SCREEN_SCALE_FACTOR=0
# export QT_SCALE_FACTOR=1.7

# Default programs:
export EDITOR="lvim"
# export TERMINAL="st"
# export TERM_PROGRAM="st"
# export TERM="st"
# export REACT_TERMINAL="st"
export BROWSER="vivaldi-stable"

# ~/ Clean-up:
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CACHE_HOME="$HOME/.cache"
# export XINITRC="${XDG_CONFIG_HOME:-$HOME/.config}/x11/xinitrc"
export LESSHISTFILE="-"
export WGETRC="${XDG_CONFIG_HOME:-$HOME/.config}/wget/wgetrc"
export WINEPREFIX="${XDG_DATA_HOME:-$HOME/.local/share}/wineprefixes/default"
export TMUX_TMPDIR="$XDG_RUNTIME_DIR"
export ANDROID_SDK_HOME="${XDG_CONFIG_HOME:-$HOME/.config}/Android/Sdk"
export GOPATH="${XDG_DATA_HOME:-$HOME/.local/share}/go"
export PATH=$PATH:$GOPATH/bin

# Other program settings:
export FZF_DEFAULT_OPTS="--layout=reverse --height 40%"
export FZF_DEFAULT_COMMAND="find -L"

# wayland specific
export WLR_NO_HARDWARE_CURSORS=1
export WLR_RENDERER_ALLOW_SOFTWARE=1


# Added by Toolbox App
export PATH="$PATH:/home/dominick/.local/share/JetBrains/Toolbox/scripts"
export SUDO_ASKPASS="$HOME/.local/bin/dmenupass"

# This is the list for lf icons:
export LF_ICONS="tw=ï“:st=ï“:ow=ï“:dt=ï“:di=ï“:fi=ïŽ:ln=ï’:or=ï’:ex=ï«œ*.c=î˜ž:*.cc=î˜:*.clj=î¨:*.coffee=î‘:*.cpp=î˜:*.css=î˜”:*.d=îž¯:*.dart=îž˜:*.erl=îž±:*.exs=î˜­:*.fs=îž§:*.go=î˜§:*.h=î˜ž:*.hh=î˜:*.hpp=î˜:*.hs=î·:*.html=î˜Ž:*.java=îœ¸:*.jl=î˜¤:*.js=îŽ:*.json=î˜‹:*.lua=î˜ :*.md=î˜‰:*.php=î˜ˆ:*.pl=î©:*.pro=îž¡:*.py=îœ¼:*.rb=îœ¹:*.rs=îž¨:*.scala=îœ·:*.ts=î˜¨:*.vim=î˜«:*.cmd=ï:*.ps1=ï:*.sh=ï:*.bash=ï:*.zsh=ï:*.fish=ï:*.tar=ï:*.tgz=ï:*.arc=ï:*.arj=ï:*.taz=ï:*.lha=ï:*.lz4=ï:*.lzh=ï:*.lzma=ï:*.tlz=ï:*.txz=ï:*.tzo=ï:*.t7z=ï:*.zip=ï:*.z=ï:*.dz=ï:*.gz=ï:*.lrz=ï:*.lz=ï:*.lzo=ï:*.xz=ï:*.zst=ï:*.tzst=ï:*.bz2=ï:*.bz=ï:*.tbz=ï:*.tbz2=ï:*.tz=ï:*.deb=ï:*.rpm=ï:*.jar=ï:*.war=ï:*.ear=ï:*.sar=ï:*.rar=ï:*.alz=ï:*.ace=ï:*.zoo=ï:*.cpio=ï:*.7z=ï:*.rz=ï:*.cab=ï:*.wim=ï:*.swm=ï:*.dwm=ï:*.esd=ï:*.jpg=ï:*.jpeg=ï:*.mjpg=ï:*.mjpeg=ï:*.gif=ï:*.bmp=ï:*.pbm=ï:*.pgm=ï:*.ppm=ï:*.tga=ï:*.xbm=ï:*.xpm=ï:*.tif=ï:*.tiff=ï:*.png=ï:*.svg=ï:*.svgz=ï:*.mng=ï:*.pcx=ï:*.mov=ï:*.mpg=ï:*.mpeg=ï:*.m2v=ï:*.mkv=ï:*.webm=ï:*.ogm=ï:*.mp4=ï:*.m4v=ï:*.mp4v=ï:*.vob=ï:*.qt=ï:*.nuv=ï:*.wmv=ï:*.asf=ï:*.rm=ï:*.rmvb=ï:*.flc=ï:*.avi=ï:*.fli=ï:*.flv=ï:*.gl=ï:*.dl=ï:*.xcf=ï:*.xwd=ï:*.yuv=ï:*.cgm=ï:*.emf=ï:*.ogv=ï:*.ogx=ï:*.aac=ï:*.au=ï:*.flac=ï:*.m4a=ï:*.mid=ï:*.midi=ï:*.mka=ï:*.mp3=ï:*.mpc=ï:*.ogg=ï:*.ra=ï:*.wav=ï:*.oga=ï:*.opus=ï:*.spx=ï:*.xspf=ï:*.pdf=ï‘:*.nix=ïŒ“:\
